<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".homescreen.AboutUsMadhavFragment">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/vivek_joshi"
                android:textSize="25sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black" />

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:cardCornerRadius="200dp"
                android:layout_marginTop="20dp"
                >

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/vivek"
                    android:scaleType="fitXY"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:justificationMode="inter_word"
                android:padding="5dp"
                android:text="@string/vivek_joshi_is_an_extraordinary_individual_who_has_shown_remarkable_resilience_and_compassion_in_the_face_of_personal_adversity_despite_facing_his_own_disabilities_he_has_dedicated_his_life_to_making_a_positive_impact_in_the_lives_of_others_vivek_is_the_founder_and_driving_force_behind_the_ngo_called_madhav_sewa_society_which_is_committed_to_assisting_disabled_individuals_and_promoting_their_overall_well_being" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:src="@drawable/disabled"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:justificationMode="inter_word"
                android:padding="5dp"
                android:text="@string/with_an_unwavering_determination_vivek_has_transformed_his_personal_challenges_into_a_source_of_inspiration_for_others_through_madhav_sewa_society_he_strives_to_empower_disabled_individuals_by_providing_them_with_access_to_essential_resources_support_and_opportunities_the_ngo_focuses_on_various_aspects_of_disabled_persons_lives_including_education_healthcare_vocational_training_and_employment_assistance_vivek_s_ultimate_goal_is_to_ensure_that_every_disabled_individual_receives_equal_opportunities_and_is_able_to_lead_a_fulfilling_and_independent_life" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/apj"
                android:scaleType="fitXY"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:justificationMode="inter_word"
                android:padding="5dp"
                android:text="@string/vivek_s_efforts_and_dedication_have_been_widely_recognized_and_applauded_he_has_been_honored_with_numerous_national_awards_for_his_exceptional_work_in_the_field_of_disability_rights_and_welfare_one_of_the_notable_accolades_he_received_was_the_prestigious_apj_abdul_kalam_award_named_after_the_late_former_president_of_india_this_recognition_highlights_vivek_s_unwavering_commitment_to_social_change_and_his_impactful_contributions_towards_uplifting_the_lives_of_disabled_individuals" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:src="@drawable/mom"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:justificationMode="inter_word"
                android:padding="5dp"
                android:text="@string/vivek_s_passion_for_making_a_difference_extends_beyond_his_own_work_his_mother_too_has_been_recognized_for_her_remarkable_contributions_she_received_the_iconic_mother_award_from_the_president_of_india_which_is_a_testament_to_her_love_care_and_dedication_towards_her_family_and_the_larger_community_this_recognition_showcases_the_values_instilled_in_vivek_by_his_mother_and_the_impact_of_her_upbringing_in_shaping_him_into_the_compassionate_and_determined_individual_he_is_today" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:src="@drawable/vivek_award"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="10dp"
                android:justificationMode="inter_word"
                android:padding="5dp"
                android:text="@string/vivek_joshi_s_story_serves_as_an_inspiration_to_all_demonstrating_the_power_of_resilience_empathy_and_the_ability_to_create_change_through_his_ngo_he_continues_to_make_a_lasting_impact_on_the_lives_of_disabled_individuals_fostering_inclusivity_and_championing_their_rights_vivek_s_remarkable_journey_and_the_recognition_he_has_received_are_a_testament_to_his_indomitable_spirit_and_unwavering_dedication_to_the_cause_of_disability_empowerment" />


        </LinearLayout>
    </ScrollView>
</layout>